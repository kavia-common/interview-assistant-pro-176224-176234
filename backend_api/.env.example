# Backend API environment configuration example
# Copy to .env and adjust values for your environment.

# Database configuration (MySQL)
DB_TYPE=mysql
DB_HOST=127.0.0.1
# Note: Default in config is 5000 per acceptance criteria; set to your MySQL port.
DB_PORT=5000
DB_USER=appuser
DB_PASSWORD=dbuser123
DB_NAME=myapp

# JWT secret used to sign tokens
JWT_SECRET=test-secret-change-me

# CORS origins allowed to access the API
CORS_ORIGINS=http://localhost:3000

# Flask app port (used by run.py)
PORT=3001
